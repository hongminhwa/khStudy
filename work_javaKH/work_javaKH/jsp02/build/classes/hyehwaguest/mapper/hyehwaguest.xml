<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hyehwaguest">
<select id="hyehwaList" resultType="hyehwaguest.dto.HyehwaGuestDTO"> 
   select idx,name,email,content,post_date 
   from hyehwaguest
   order by idx desc
  </select>
  
  <insert id="hyehwaInsert"> 
     insert into hyehwaguest
     (idx,name,email,passwd,content) values 
       ( hyehwaguest_seq.nextval, #{name}, #{email}, #{passwd}, #{content} )
  </insert>  
   
  
   
</mapper>





